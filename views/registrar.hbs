<!doctype html>
<html lang="es">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="css/estilos.css">
    <link rel="icon" href="img/logo.png">
    
    <title>TesiDate</title>
  </head>
  <body>

    <div class="" id="contLogin">
        
      <section id="login">
        <div id="backLogin" class="container">
          
          <div class="row align-items-end" id="etiIniciar">
            <div class="col">
                <a href="/">
                Iniciar sesión
              </a>
              </div>
              <div class="col">
                <a href="/registrar">
                Registrate
              </a>
              </div>
          </div>

        </div>
        
        <form id="formLogin" action="/registrar" method="post">
          <div id="tituloLogin">
            <h1 class="mb-5">Registrate</h1>
          </div>
          <div class="mb-4">
            <input type="number" class="form-control" id="eti" placeholder="Matricula del TESI" required name="matricula">
          </div>
          <div class="mb-4">
            <input type="text" class="form-control" id="eti" placeholder="Nombre" required name="nombre">
          </div>
          <div class="mb-4">
            <input type="text" class="form-control" id="eti" placeholder="Apellidos" required name="apellidos">
          </div>
          <div class="mb-4">
            <input type="email" class="form-control" id="eti" placeholder="Correo" required name="correo">
          </div>
          <div class="mb-4">
            <input type="password" class="form-control" id="eti" placeholder="Contraseña" required name="password">
          </div>
          <div class="mb-3" id="ol">
            <a href="login.html" id="a">
              ¿Ya tienes una cuenta?
            </a>
          </div>

          <div id="boton" class="mb-1">
            <button type="submit"  id="btnIniciar">
              <svg xmlns="http://www.w3.org/2000/svg" width="70" height="70" fill="currentColor" class="bi bi-arrow-right-circle" viewBox="0 0 16 16" id="icon">
                <path fill-rule="evenodd" d="M1 8a7 7 0 1 0 14 0A7 7 0 0 0 1 8zm15 0A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM4.5 7.5a.5.5 0 0 0 0 1h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H4.5z"/>
              </svg>
            </button>
          </div>
          
        </form>
      </section>
      
    </div>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    
  </body>
</html>