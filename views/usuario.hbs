<!doctype html>
<html lang="es">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="../css/estilos.css">
    <link rel="icon" href="img/logo.png">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">

    
    <title>TesiDate</title>
  </head>
  <body>

    <header>
      <div id="imgContHeader">
        <a href="/perfil">
          <img src=".{{user.foto}}" alt="" id="imgHeader">
        </a>
      </div>
      <a href="/principal">
        <div id="tituloHeader">
          <img src="../img/logo.png" id="logo">
          <h1>TesiDate</h1>
        </div>
      </a>
    </header>
    
    <div class="" id="contPerfil1">
        
      <section id="topPerfil1">
          <div class="container-sm">
            <a href="/interes"><i class="bi bi-arrow-left-short"></i></a>
        </div>
        <div id="contImgPerfil">
          <img src=".{{foto}}" alt="" id="imgPerfil">
        </div>
        <div id="descPerfil">
          <h1>{{nombre}}</h1>
        </div>
      </section>

      <section id="editPerfil">
        <a class="btn btn-primary mb-3" id="btnMensaje" href="/chat">Mandar mensaje</a>

        <h3>Información personal</h3>

        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Edad</label>
          <label for="exampleInputEmail1" class="form-control" id="label2">{{edad}}</label>
        </div>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Descripción</label>
          <label class="form-control" id="label2">{{descripcion}}</textarea>
        </div>
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Carrera</label>
            <label for="exampleInputEmail1" class="form-control" id="label2">{{carrera}}</label>
        </div>
        <div class="">
            <label for="exampleInputEmail1" class="form-label">Genero</label>
            <label for="exampleInputEmail1" class="form-control" id="label2">{{genero}}</label>
        </div>


    </section>


    <!-- Nav -->
      <div class="container-sm">
          <div class="row" id="nav">
            <div class="col">
              <a href="/principal">Inicio</a>
            </div>
            <div class="col">
              <a href="/interes">Interes</a> 
            </div>
            <div class="col">
              <a href="/mensajes">Mensajes</a>
            </div>
          </div>
      </div>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    
  </body>
</html>