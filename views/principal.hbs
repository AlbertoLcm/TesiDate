<!doctype html>
<html lang="es">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="css/estilos.css">
    <link rel="icon" href="img/logo.png">
    
    <title>TesiDate</title>
  </head>
  <body>

    <header>
      <div id="imgContHeader">
        <a href="/perfil">
          <img src="{{user.foto}}" alt="" id="imgHeader">
        </a>
      </div>
      <a href="/principal">
        <div id="tituloHeader">
          <img src="img/logo.png" id="logo">
          <h1>TesiDate</h1>
        </div>
      </a>
    </header>

    <div class="container" id="contPrincipal">

        <section id="user">
          <div id="imagen">
            <img src="{{foto}}" alt="" id="imgPrincipal">
            <div id="descripcionUsuario">
              <h3>{{nombre}} | <span> {{edad}} </span> </h3>
              <h4>{{carrera}}</h4>
              <h4>Genero: {{genero}}</h4>
              <p>{{descripcion}}</p>
            </div>
          </div>
        </section>

        <div id="botones">
          <a href="" id="btnRechazar">
            <svg xmlns="http://www.w3.org/2000/svg" width="80" height="100%" fill="currentColor" class="bi bi-x-circle-fill" viewBox="0 0 16 16">
              <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z"/>
            </svg>
          </a>
          <a href="/add/{{matricula}}" id="btnAceptar">
            <svg xmlns="http://www.w3.org/2000/svg" width="80" height="100%" fill="currentColor" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
              <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
            </svg>
          </a>
        </div>

      </div>

      <!-- Nav -->
      <div class="container-sm">
          <div class="row" id="nav">
            <div class="col">
              <a href="/principal">Inicio</a>
            </div>
            <div class="col">
              <a href="/interes">Interes</a> 
            </div>
            <div class="col">
              <a href="/mensajes">Mensajes</a>
            </div>
          </div>
      </div>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="/socket.io/socket.io.js" charset="utf-8"></script>
    <script src="js/main.js"></script>    
    
  </body>
</html>